<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="spinnerItemStyle">
        <item name="android:background">@color/lighterWhite</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>

    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
    </style>

    <style name="Theme.App.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/textColor</item>
        <item name="colorControlActivated">@color/textColor</item>
        <item name="colorControlHighlight">@color/textColor</item>
    </style>

    <style name="popup_window_animation_addname">
        <item name="android:windowEnterAnimation">@anim/fade_in_animation</item>
    </style>

</resources>
